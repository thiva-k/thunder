{
    "name": "Default Basic + Google + GitHub + SMS Authentication Flow",
    "handle": "default-basic-google-github-sms-flow",
    "flowType": "AUTHENTICATION",
    "nodes": [
        {
            "id": "start",
            "type": "START",
            "onSuccess": "choose_auth"
        },
        {
            "id": "choose_auth",
            "type": "PROMPT",
            "prompts": [
                {
                    "action": {
                        "ref": "action_001",
                        "nextNode": "basic_auth"
                    }
                },
                {
                    "action": {
                        "ref": "action_002",
                        "nextNode": "google_auth"
                    }
                },
                {
                    "action": {
                        "ref": "action_003",
                        "nextNode": "github_auth"
                    }
                },
                {
                    "action": {
                        "ref": "action_004",
                        "nextNode": "prompt_mobile"
                    }
                }
            ]
        },
        {
            "id": "basic_auth",
            "type": "TASK_EXECUTION",
            "executor": {
                "name": "BasicAuthExecutor"
            },
            "onSuccess": "send_sms"
        },
        {
            "id": "google_auth",
            "type": "TASK_EXECUTION",
            "executor": {
                "name": "GoogleOIDCAuthExecutor",
                "inputs": [
                    {
                        "ref": "input_001",
                        "identifier": "code",
                        "type": "TEXT_INPUT",
                        "required": true
                    },
                    {
                        "ref": "input_002",
                        "identifier": "nonce",
                        "type": "TEXT_INPUT",
                        "required": false
                    }
                ]
            },
            "onSuccess": "auth_assert"
        },
        {
            "id": "github_auth",
            "type": "TASK_EXECUTION",
            "properties": {
                "idpId": "<github-idp-id>"
            },
            "executor": {
                "name": "GithubOAuthExecutor",
                "inputs": [
                    {
                        "ref": "input_003",
                        "identifier": "code",
                        "type": "TEXT_INPUT",
                        "required": true
                    }
                ]
            },
            "onSuccess": "auth_assert"
        },
        {
            "id": "prompt_mobile",
            "type": "PROMPT",
            "prompts": [
                {
                    "inputs": [
                        {
                            "ref": "input_004",
                            "identifier": "mobileNumber",
                            "type": "PHONE_INPUT",
                            "required": true
                        }
                    ],
                    "action": {
                        "ref": "action_001",
                        "nextNode": "send_sms"
                    }
                }
            ]
        },
        {
            "id": "send_sms",
            "type": "TASK_EXECUTION",
            "properties": {
                "senderId": "<your-sender-id>"
            },
            "executor": {
                "name": "SMSOTPAuthExecutor",
                "mode": "send"
            },
            "onSuccess": "prompt_otp"
        },
        {
            "id": "prompt_otp",
            "type": "PROMPT",
            "prompts": [
                {
                    "inputs": [
                        {
                            "ref": "input_005",
                            "identifier": "otp",
                            "type": "OTP_INPUT",
                            "required": true
                        }
                    ],
                    "action": {
                        "ref": "action_001",
                        "nextNode": "verify_sms"
                    }
                }
            ]
        },
        {
            "id": "verify_sms",
            "type": "TASK_EXECUTION",
            "properties": {
                "senderId": "<your-sender-id>"
            },
            "executor": {
                "name": "SMSOTPAuthExecutor",
                "mode": "verify"
            },
            "onSuccess": "attr_collector"
        },
        {
            "id": "attr_collector",
            "type": "TASK_EXECUTION",
            "executor": {
                "name": "AttributeCollector",
                "inputs": [
                    {
                        "ref": "input_005",
                        "identifier": "mobileNumber",
                        "type": "PHONE_INPUT",
                        "required": false
                    }
                ]
            },
            "onSuccess": "auth_assert"
        },
        {
            "id": "auth_assert",
            "type": "TASK_EXECUTION",
            "executor": {
                "name": "AuthAssertExecutor"
            },
            "onSuccess": "end"
        },
        {
            "id": "end",
            "type": "END"
        }
    ]
}
