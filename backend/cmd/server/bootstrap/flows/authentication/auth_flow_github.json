{
    "name": "Default GitHub Authentication Flow",
    "handle": "default-github-flow",
    "flowType": "AUTHENTICATION",
    "nodes": [
        {
            "id": "start",
            "type": "START",
            "onSuccess": "github_auth"
        },
        {
            "id": "github_auth",
            "type": "TASK_EXECUTION",
            "properties": {
                "idpId": "<github-idp-id>"
            },
            "inputs": [
                {
                    "ref": "input_001",
                    "identifier": "code",
                    "type": "TEXT_INPUT",
                    "required": true
                }
            ],
            "executor": {
                "name": "GithubOAuthExecutor"
            },
            "onSuccess": "auth_assert"
        },
        {
            "id": "auth_assert",
            "type": "TASK_EXECUTION",
            "executor": {
                "name": "AuthAssertExecutor"
            },
            "onSuccess": "end"
        },
        {
            "id": "end",
            "type": "END"
        }
    ]
}
