{
    "id": "auth_flow_config_basic",
    "type": "AUTHENTICATION",
    "nodes": [
        {
            "id": "basic_auth",
            "type": "TASK_EXECUTION",
            "inputs": [
                {
                    "ref": "input_001",
                    "type": "TEXT_INPUT",
                    "identifier": "username",
                    "required": true
                },
                {
                    "ref": "input_002",
                    "type": "PASSWORD_INPUT",
                    "identifier": "password",
                    "required": true
                }
            ],
            "executor": {
                "name": "BasicAuthExecutor"
            },
            "onSuccess": "authorization_check"
        },
        {
            "id": "authorization_check",
            "type": "TASK_EXECUTION",
            "executor": {
                "name": "AuthorizationExecutor"
            },
            "onSuccess": "authenticated"
        },
        {
            "id": "authenticated",
            "type": "AUTHENTICATION_SUCCESS"
        }
    ]
}
