{
    "id": "auth_flow_config_sms",
    "type": "AUTHENTICATION",
    "nodes": [
        {
            "id": "start",
            "type": "START",
            "onSuccess": "prompt_mobile"
        },
        {
            "id": "prompt_mobile",
            "type": "PROMPT",
            "inputs": [
                {
                    "ref": "input_001",
                    "identifier": "mobileNumber",
                    "type": "TEXT_INPUT",
                    "required": true
                }
            ],
            "actions": [
                {
                    "ref": "action_001",
                    "nextNode": "sms_otp_auth"
                }
            ]
        },
        {
            "id": "sms_otp_auth",
            "type": "TASK_EXECUTION",
            "properties": {
                "senderId": "<your-sender-id>"
            },
            "executor": {
                "name": "SMSOTPAuthExecutor"
            },
            "onSuccess": "auth_assert"
        },
        {
            "id": "auth_assert",
            "type": "TASK_EXECUTION",
            "executor": {
                "name": "AuthAssertExecutor"
            },
            "onSuccess": "end"
        },
        {
            "id": "end",
            "type": "END"
        }
    ]
}
