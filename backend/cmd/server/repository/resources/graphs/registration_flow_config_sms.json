                },
                {
                    "name": "lastName",
                    "type": "string",
                    "required": false
                },
                {
                    "name": "email",
                    "type": "string",
                    "required": true
                },
                {
                    "name": "mobileNumber",
                    "type": "string",
                    "required": true
                }
