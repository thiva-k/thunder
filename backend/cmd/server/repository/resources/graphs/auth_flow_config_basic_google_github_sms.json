{
    "id": "auth_flow_config_basic_google_github_sms",
    "type": "AUTHENTICATION",
    "nodes": [
        {
            "id": "start",
            "type": "START",
            "onSuccess": "choose_auth"
        },
        {
            "id": "choose_auth",
            "type": "PROMPT",
            "actions": [
                {
                    "ref": "action_001",
                    "nextNode": "basic_auth"
                },
                {
                    "ref": "action_002",
                    "nextNode": "google_auth"
                },
                {
                    "ref": "action_003",
                    "nextNode": "github_auth"
                },
                {
                    "ref": "action_004",
                    "nextNode": "prompt_mobile"
                }
            ]
        },
        {
            "id": "basic_auth",
            "type": "TASK_EXECUTION",
            "executor": {
                "name": "BasicAuthExecutor"
            },
            "onSuccess": "sms_otp_auth"
        },
        {
            "id": "google_auth",
            "type": "TASK_EXECUTION",
            "inputs": [
                {
                    "ref": "input_001",
                    "identifier": "code",
                    "type": "TEXT_INPUT",
                    "required": true
                },
                {
                    "ref": "input_002",
                    "identifier": "nonce",
                    "type": "TEXT_INPUT",
                    "required": false
                }
            ],
            "properties": {
                "idpId": "<google-idp-id>"
            },
            "executor": {
                "name": "GoogleOIDCAuthExecutor"
            },
            "onSuccess": "authenticated"
        },
        {
            "id": "github_auth",
            "type": "TASK_EXECUTION",
            "properties": {
                "idpId": "<github-idp-id>"
            },
            "inputs": [
                {
                    "ref": "input_003",
                    "identifier": "code",
                    "type": "TEXT_INPUT",
                    "required": true
                }
            ],
            "executor": {
                "name": "GithubOAuthExecutor"
            },
            "onSuccess": "authenticated"
        },
        {
            "id": "prompt_mobile",
            "type": "PROMPT",
            "inputs": [
                {
                    "ref": "input_004",
                    "identifier": "mobileNumber",
                    "type": "TEXT_INPUT",
                    "required": true
                }
            ],
            "actions": [
                {
                    "ref": "action_001",
                    "nextNode": "sms_otp_auth"
                }
            ]
        },
        {
            "id": "sms_otp_auth",
            "type": "TASK_EXECUTION",
            "properties": {
                "senderId": "<your-sender-id>"
            },
            "executor": {
                "name": "SMSOTPAuthExecutor"
            },
            "onSuccess": "attr_collector"
        },
        {
            "id": "attr_collector",
            "type": "TASK_EXECUTION",
            "inputs": [
                {
                    "ref": "input_005",
                    "identifier": "mobileNumber",
                    "type": "TEXT_INPUT",
                    "required": false
                }
            ],
            "executor": {
                "name": "AttributeCollector"
            },
            "onSuccess": "authenticated"
        },
        {
            "id": "authenticated",
            "type": "AUTHENTICATION_SUCCESS"
        }
    ]
}
