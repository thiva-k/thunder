{
    "id": "auth_flow_config_basic_google",
    "type": "AUTHENTICATION",
    "nodes": [
        {
            "id": "start",
            "type": "START",
            "onSuccess": "choose_auth"
        },
        {
            "id": "choose_auth",
            "type": "PROMPT",
            "actions": [
                {
                    "ref": "action_001",
                    "nextNode": "basic_auth"
                },
                {
                    "ref": "action_002",
                    "nextNode": "google_auth"
                }
            ]
        },
        {
            "id": "basic_auth",
            "type": "TASK_EXECUTION",
            "executor": {
                "name": "BasicAuthExecutor"
            },
            "onSuccess": "auth_assert"
        },
        {
            "id": "google_auth",
            "type": "TASK_EXECUTION",
            "properties": {
                "idpId": "<google-idp-id>"
            },
            "inputs": [
                {
                    "ref": "input_003",
                    "type": "TEXT_INPUT",
                    "identifier": "code",
                    "required": true
                }
            ],
            "executor": {
                "name": "GoogleOIDCAuthExecutor"
            },
            "onSuccess": "auth_assert"
        },
        {
            "id": "auth_assert",
            "type": "TASK_EXECUTION",
            "executor": {
                "name": "AuthAssertExecutor"
            },
            "onSuccess": "end"
        },
        {
            "id": "end",
            "type": "END"
        }
    ]
}
