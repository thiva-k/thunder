{
    "id": "registration_flow_config_basic_google_github_sms",
    "type": "REGISTRATION",
    "nodes": [
        {
            "id": "registration_start",
            "type": "REGISTRATION_START",
            "onSuccess": "choose_auth"
        },
        {
            "id": "choose_auth",
            "type": "PROMPT",
            "actions": [
                {
                    "ref": "action_001",
                    "nextNode": "basic_auth"
                },
                {
                    "ref": "action_002",
                    "nextNode": "google_auth"
                },
                {
                    "ref": "action_003",
                    "nextNode": "github_auth"
                },
                {
                    "ref": "action_004",
                    "nextNode": "prompt_mobile"
                }
            ]
        },
        {
            "id": "basic_auth",
            "type": "TASK_EXECUTION",
            "executor": {
                "name": "BasicAuthExecutor"
            },
            "onSuccess": "sms_otp_auth_basic"
        },
        {
            "id": "google_auth",
            "type": "TASK_EXECUTION",
            "properties": {
                "idpId": "<google-idp-id>"
            },
            "executor": {
                "name": "GoogleOIDCAuthExecutor"
            },
            "onSuccess": "provisioning_social"
        },
        {
            "id": "github_auth",
            "type": "TASK_EXECUTION",
            "properties": {
                "idpId": "<github-idp-id>"
            },
            "executor": {
                "name": "GithubOAuthExecutor"
            },
            "onSuccess": "provisioning_social"
        },
        {
            "id": "prompt_mobile",
            "type": "PROMPT",
            "inputs": [
                {
                    "ref": "input_001",
                    "identifier": "mobileNumber",
                    "type": "TEXT_INPUT",
                    "required": true
                }
            ],
            "actions": [
                {
                    "ref": "action_001",
                    "nextNode": "sms_otp_auth"
                }
            ]
        },
        {
            "id": "sms_otp_auth",
            "type": "TASK_EXECUTION",
            "properties": {
                "senderId": "<your-sender-id>"
            },
            "executor": {
                "name": "SMSOTPAuthExecutor"
            },
            "onSuccess": "provisioning_local_sms"
        },
        {
            "id": "sms_otp_auth_basic",
            "type": "TASK_EXECUTION",
            "properties": {
                "senderId": "<your-sender-id>"
            },
            "executor": {
                "name": "SMSOTPAuthExecutor"
            },
            "onSuccess": "provisioning_local_basic"
        },
        {
            "id": "provisioning_local_basic",
            "type": "TASK_EXECUTION",
            "inputs": [
                {
                    "ref": "input_002",
                    "identifier": "username",
                    "type": "TEXT_INPUT",
                    "required": true
                },
                {
                    "ref": "input_003",
                    "identifier": "password",
                    "type": "PASSWORD_INPUT",
                    "required": true
                },
                {
                    "ref": "input_004",
                    "identifier": "firstName",
                    "type": "TEXT_INPUT",
                    "required": false
                },
                {
                    "ref": "input_005",
                    "identifier": "lastName",
                    "type": "TEXT_INPUT",
                    "required": false
                },
                {
                    "ref": "input_006",
                    "identifier": "mobileNumber",
                    "type": "TEXT_INPUT",
                    "required": false
                }
            ],
            "executor": {
                "name": "ProvisioningExecutor"
            },
            "onSuccess": "authenticated"
        },
        {
            "id": "provisioning_local_sms",
            "type": "TASK_EXECUTION",
            "inputs": [
                {
                    "ref": "input_007",
                    "identifier": "firstName",
                    "type": "TEXT_INPUT",
                    "required": false
                },
                {
                    "ref": "input_008",
                    "identifier": "lastName",
                    "type": "TEXT_INPUT",
                    "required": false
                },
                {
                    "ref": "input_009",
                    "identifier": "mobileNumber",
                    "type": "TEXT_INPUT",
                    "required": true
                }
            ],
            "executor": {
                "name": "ProvisioningExecutor"
            },
            "onSuccess": "authenticated"
        },
        {
            "id": "provisioning_social",
            "type": "TASK_EXECUTION",
            "executor": {
                "name": "ProvisioningExecutor"
            },
            "onSuccess": "authenticated"
        },
        {
            "id": "authenticated",
            "type": "AUTHENTICATION_SUCCESS"
        }
    ]
}
