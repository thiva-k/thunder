{
    "id": "registration_flow_config_basic_google_github_sms",
    "type": "REGISTRATION",
    "nodes": [
        {
            "id": "choose_auth",
            "type": "DECISION",
            "next": [
                "basic_auth",
                "google_auth",
                "github_auth",
                "prompt_mobile"
            ]
        },
        {
            "id": "basic_auth",
            "type": "TASK_EXECUTION",
            "executor": {
                "name": "BasicAuthExecutor"
            },
            "next": [
                "sms_otp_auth_basic"
            ]
        },
        {
            "id": "google_auth",
            "type": "TASK_EXECUTION",
            "properties": {
                "idpId": "<google-idp-id>"
            },
            "executor": {
                "name": "GoogleOIDCAuthExecutor"
            },
            "next": [
                "provisioning_social"
            ]
        },
        {
            "id": "github_auth",
            "type": "TASK_EXECUTION",
            "properties": {
                "idpId": "<github-idp-id>"
            },
            "executor": {
                "name": "GithubOAuthExecutor"
            },
            "next": [
                "provisioning_social"
            ]
        },
        {
            "id": "prompt_mobile",
            "type": "PROMPT_ONLY",
            "inputData": [
                {
                    "name": "mobileNumber",
                    "type": "string",
                    "required": true
                }
            ],
            "next": [
                "sms_otp_auth"
            ]
        },
        {
            "id": "sms_otp_auth",
            "type": "TASK_EXECUTION",
            "properties": {
                "senderId": "<your-sender-id>"
            },
            "executor": {
                "name": "SMSOTPAuthExecutor"
            },
            "next": [
                "provisioning_local_sms"
            ]
        },
        {
            "id": "sms_otp_auth_basic",
            "type": "TASK_EXECUTION",
            "properties": {
                "senderId": "<your-sender-id>"
            },
            "executor": {
                "name": "SMSOTPAuthExecutor"
            },
            "next": [
                "provisioning_local_basic"
            ]
        },
        {
            "id": "provisioning_local_basic",
            "type": "TASK_EXECUTION",
            "inputData": [
                {
                    "name": "username",
                    "type": "string",
                    "required": true
                },
                {
                    "name": "password",
                    "type": "string",
                    "required": true
                },
                {
                    "name": "firstName",
                    "type": "string",
                    "required": false
                },
                {
                    "name": "lastName",
                    "type": "string",
                    "required": false
                },
                {
                    "name": "mobileNumber",
                    "type": "string",
                    "required": false
                }
            ],
            "properties": {
                "ouId": "<default-ou-id>",
                "userType": "<default-user-type>"
            },
            "executor": {
                "name": "ProvisioningExecutor"
            },
            "next": [
                "authenticated"
            ]
        },
        {
            "id": "provisioning_local_sms",
            "type": "TASK_EXECUTION",
            "inputData": [
                {
                    "name": "firstName",
                    "type": "string",
                    "required": false
                },
                {
                    "name": "lastName",
                    "type": "string",
                    "required": false
                },
                {
                    "name": "mobileNumber",
                    "type": "string",
                    "required": true
                }
            ],
            "properties": {
                "ouId": "<default-ou-id>",
                "userType": "<default-user-type>"
            },
            "executor": {
                "name": "ProvisioningExecutor"
            },
            "next": [
                "authenticated"
            ]
        },
        {
            "id": "provisioning_social",
            "type": "TASK_EXECUTION",
            "properties": {
                "ouId": "<default-ou-id>",
                "userType": "<default-user-type>"
            },
            "executor": {
                "name": "ProvisioningExecutor"
            },
            "next": [
                "authenticated"
            ]
        },
        {
            "id": "authenticated",
            "type": "AUTHENTICATION_SUCCESS"
        }
    ]
}
