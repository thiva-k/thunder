{
    "id": "auth_flow_config_decision_and_mfa_test_1",
    "type": "AUTHENTICATION",
    "nodes": [
        {
            "id": "start",
            "type": "START",
            "onSuccess": "choose_auth"
        },
        {
            "id": "choose_auth",
            "type": "PROMPT",
            "actions": [
                {
                    "ref": "basic_auth",
                    "nextNode": "basic_auth"
                },
                {
                    "ref": "prompt_mobile",
                    "nextNode": "prompt_mobile"
                }
            ]
        },
        {
            "id": "basic_auth",
            "type": "TASK_EXECUTION",
            "inputs": [
                {
                    "ref": "input_001",
                    "identifier": "username",
                    "type": "string",
                    "required": true
                },
                {
                    "ref": "input_002",
                    "identifier": "password",
                    "type": "string",
                    "required": true
                }
            ],
            "executor": {
                "name": "BasicAuthExecutor"
            },
            "onSuccess": "attr_collector"
        },
        {
            "id": "attr_collector",
            "type": "TASK_EXECUTION",
            "inputs": [
                {
                    "ref": "input_003",
                    "identifier": "mobileNumber",
                    "type": "string",
                    "required": true
                }
            ],
            "executor": {
                "name": "AttributeCollector"
            },
            "onSuccess": "sms_otp_auth"
        },
        {
            "id": "prompt_mobile",
            "type": "PROMPT",
            "inputs": [
                {
                    "ref": "input_004",
                    "identifier": "mobileNumber",
                    "type": "string",
                    "required": true
                }
            ],
            "actions": [
                {
                    "ref": "action_mobile",
                    "nextNode": "sms_otp_auth"
                }
            ]
        },
        {
            "id": "sms_otp_auth",
            "type": "TASK_EXECUTION",
            "inputs": [
                {
                    "ref": "input_005",
                    "identifier": "otp",
                    "type": "number",
                    "required": true
                }
            ],
            "properties": {
                "senderId": "test-sms-sender-id"
            },
            "executor": {
                "name": "SMSOTPAuthExecutor"
            },
            "onSuccess": "authenticated"
        },
        {
            "id": "authenticated",
            "type": "AUTHENTICATION_SUCCESS"
        }
    ]
}
