{
    "id": "registration_flow_config_basic_http_request",
    "type": "REGISTRATION",
    "nodes": [
        {
            "id": "registration_start",
            "type": "REGISTRATION_START",
            "next": [
                "provision_user"
            ]
        },
        {
            "id": "provision_user",
            "type": "TASK_EXECUTION",
            "inputData": [
                {
                    "name": "username",
                    "type": "string",
                    "required": true
                },
                {
                    "name": "password",
                    "type": "PASSWORD_INPUT",
                    "required": true
                },
                {
                    "name": "email",
                    "type": "string",
                    "required": true
                },
                {
                    "name": "firstName",
                    "type": "string",
                    "required": true
                },
                {
                    "name": "lastName",
                    "type": "string",
                    "required": true
                }
            ],
            "executor": {
                "name": "ProvisioningExecutor"
            },
            "next": [
                "create_external_profile"
            ]
        },
        {
            "id": "create_external_profile",
            "type": "TASK_EXECUTION",
            "properties": {
                "url": "http://localhost:9091/api/users",
                "method": "POST",
                "headers": {
                    "Content-Type": "application/json",
                    "Authorization": "Bearer test-token"
                },
                "body": {
                    "externalId": "{{ context.userID }}",
                    "username": "{{ context.username }}",
                    "email": "{{ context.email }}",
                    "firstName": "{{ context.firstName }}",
                    "lastName": "{{ context.lastName }}",
                    "unknownField": "{{ context.unknownPlaceholder }}"
                },
                "responseMapping": {
                    "externalUserId": "data.userId",
                    "profileUrl": "data.profileUrl"
                },
                "timeout": 5
            },
            "executor": {
                "name": "HTTPRequestExecutor"
            }
        }
    ]
}
