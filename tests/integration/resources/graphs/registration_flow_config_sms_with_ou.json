{
    "id": "registration_flow_config_sms_with_ou",
    "type": "REGISTRATION",
    "nodes": [
        {
            "id": "start",
            "type": "START",
            "onSuccess": "sms_auth"
        },
        {
            "id": "sms_auth",
            "type": "TASK_EXECUTION",
            "inputs": [
                {
                    "ref": "input_000",
                    "identifier": "mobileNumber",
                    "type": "string",
                    "required": true
                },
                {
                    "ref": "input_000_otp",
                    "identifier": "otp",
                    "type": "string",
                    "required": true
                }
            ],
            "properties": {
                "senderId": "test-sms-sender-id"
            },
            "executor": {
                "name": "SMSOTPAuthExecutor"
            },
            "onSuccess": "ou_creation"
        },
        {
            "id": "ou_creation",
            "type": "TASK_EXECUTION",
            "inputs": [
                {
                    "ref": "input_001",
                    "identifier": "ouName",
                    "type": "string",
                    "required": true
                },
                {
                    "ref": "input_002",
                    "identifier": "ouHandle",
                    "type": "string",
                    "required": true
                },
                {
                    "ref": "input_003",
                    "identifier": "ouDescription",
                    "type": "string",
                    "required": false
                }
            ],
            "executor": {
                "name": "OUExecutor"
            },
            "onSuccess": "provisioning"
        },
        {
            "id": "provisioning",
            "type": "TASK_EXECUTION",
            "inputs": [
                {
                    "ref": "input_004",
                    "identifier": "mobileNumber",
                    "type": "string",
                    "required": true
                },
                {
                    "ref": "input_005",
                    "identifier": "firstName",
                    "type": "string",
                    "required": true
                },
                {
                    "ref": "input_006",
                    "identifier": "lastName",
                    "type": "string",
                    "required": true
                },
                {
                    "ref": "input_007",
                    "identifier": "email",
                    "type": "string",
                    "required": true
                }
            ],
            "executor": {
                "name": "ProvisioningExecutor"
            },
            "onSuccess": "authenticated"
        },
        {
            "id": "authenticated",
            "type": "AUTHENTICATION_SUCCESS"
        }
    ]
}
