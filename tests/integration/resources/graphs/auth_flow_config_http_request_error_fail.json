{
    "id": "auth_flow_config_http_request_error_fail",
    "type": "AUTHENTICATION",
    "nodes": [
        {
            "id": "start",
            "type": "START",
            "onSuccess": "basic_auth"
        },
        {
            "id": "basic_auth",
            "type": "TASK_EXECUTION",
            "executor": {
                "name": "BasicAuthExecutor"
            },
            "onSuccess": "http_request_error"
        },
        {
            "id": "http_request_error",
            "type": "TASK_EXECUTION",
            "properties": {
                "url": "http://localhost:9091/api/error",
                "method": "POST",
                "headers": "{\"Content-Type\": \"application/json\"}",
                "body": "{\"userId\": \"{{ context.userID }}\"}",
                "errorHandling": "{\"failOnError\": true}",
                "timeout": "5"
            },
            "executor": {
                "name": "HTTPRequestExecutor"
            },
            "onSuccess": "auth_assert"
        },
        {
            "id": "auth_assert",
            "type": "TASK_EXECUTION",
            "executor": {
                "name": "AuthAssertExecutor"
            },
            "onSuccess": "end"
        },
        {
            "id": "end",
            "type": "END"
        }
    ]
}
