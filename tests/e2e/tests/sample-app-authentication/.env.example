# Sample App MFA Test Environment Variables
# Copy this file to .env and update with your values

# Required: Sample app URL
SAMPLE_APP_URL=https://localhost:3000

# Required: Application ID from Thunder (for automated setup)
SAMPLE_APP_ID=your-application-id-here

# Thunder server URL (optional, defaults to https://localhost:8090)
THUNDER_URL=https://localhost:8090

# Admin credentials (optional, defaults shown)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin

# Test user credentials (optional, defaults shown)
SAMPLE_APP_USERNAME=e2e-test-user
SAMPLE_APP_PASSWORD=e2e-test-password

# Mock SMS server port (optional, defaults to 8098)
MOCK_SMS_SERVER_PORT=8098

# Enable automated MFA setup (optional, defaults to true)
# Set to false to use manual setup
AUTO_SETUP_MFA=true
